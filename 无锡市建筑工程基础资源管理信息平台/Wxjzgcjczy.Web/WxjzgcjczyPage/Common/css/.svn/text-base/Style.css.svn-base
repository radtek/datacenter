/*control.js（在jQuery的基础上）中提供的界面验证功能，表达验证效果时需要下面几个定义*/
.textbox
{
    padding:2px;
	color: Blue;
	border: #7B7B7B 1px solid;
	width: 70%; 
}
.textbox_long
{
    padding:2px;
	color: Blue;
	border: #7B7B7B 1px solid;
	width: 90%; 
}
input.textbox_error, textarea.textbox_error, select.textbox_error
{
    color: #fff;
    border-color: #000;
    background-color: #cd0a0a;
    width: 70%;
}
label.textbox_error
{
    color: #cd0a0a;
    margin-left: 5px;
}
/*界面验证效果组定义完毕*/

